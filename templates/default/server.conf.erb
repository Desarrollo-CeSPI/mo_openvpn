port 1194
proto udp
dev tun

ca ca.crt
cert <%= @cert_filename %>
key <%= @key_filename %>
dh dh2048.pem

server <%= @server_network %>

ifconfig-pool-persist ipp.txt

<% @routes.each do |route| %>
  push "route <%= route %>"
<% end %>

keepalive 10 120
comp-lzo
persist-key
persist-tun
verb 3
status openvpn-status.log

plugin /usr/lib/openvpn/openvpn-auth-ldap.so /etc/openvpn/auth
